{
  "name": "recruitment-task",
  "version": "1.0.0",
  "description": "To run the server, navigate into into the `api` folder and run:",
  "main": "index.js",
  "scripts": {
    "client": "cd client && npm run serve",
    "server": "cd api && npm start",
    "start": "concurrently \"npm run client\" \"npm run server\"",
    "install:api": "cd api && npm install",
    "install:client": "cd client && npm install",
    "install:appliances": "cd api/appliances && npm install",
    "install:auth": "cd api/auth && npm install",
    "postinstall": "run-p install:*"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/Vocovo/recruitment-task.git"
  },
  "author": "",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/Vocovo/recruitment-task/issues"
  },
  "homepage": "https://github.com/Vocovo/recruitment-task#readme",
  "devDependencies": {
    "concurrently": "^7.6.0",
    "npm-run-all": "^4.1.5"
  }
}
